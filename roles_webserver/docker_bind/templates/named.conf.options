options {
        directory "/var/cache/bind";

        dnssec-validation auto;

        recursion yes;
        allow-query { any; };
        allow-recursion { localnets; localhost; 10.5.0.0/24; 2001:470:1f0b:7ce::/64; };

        auth-nxdomain no;    # conform to RFC1035
        listen-on-v6 { any; };

        querylog no;
};


