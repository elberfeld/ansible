    # zus채tzliche RSync Optionen
    options: "--compress"
    
    # Base Directory
    basedir: "/"

    # Includes 
    includes:
      - "etc**"
      - "srv**"
      - "var/log**"

    # Includes 
    excludes:
      - "*"

    # Backup Schedule 
    weekday: "*"
    hour: "*"
    minute: "00"

    # Alerta Heartbeat Timeout 
    heartbeat_timeout: "{{ 3 * 12 * 60 * 60 }}"


