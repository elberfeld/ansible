
hosts = {{ int_ip4 }}
auth_bind = yes
base = {{ ldap.search_base }}
ldap_version = 3
dn = {{ ldap.readonly_dn }}
dnpass = {{ ldap_readonly_pass }}
deref = never
scope = subtree
pass_attrs = =user=%u
pass_filter = (&(objectclass=inetOrgPerson)(ObjectClass=mailAccount)(mailbox=%u))
user_filter = (&(objectclass=inetOrgPerson)(ObjectClass=mailAccount)(mailbox=%u))












