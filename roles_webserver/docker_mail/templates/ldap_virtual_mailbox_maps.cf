
# E-Mail Mailboxen 
# Eine Mailbox wird durch ein Objekt der Klasse 'inetOrgPerson' und 'mailAccount' festgelegt.
# Das Attribut 'mailbox' enth√§lt den Namen der Mailbox.
# Quick Check: postmap -v -q test@void.ms ldap:/etc/postfix/ldap_virtual_mailbox_maps.cf

server_host = ldap://{{ ldap_local.use_host }}/
search_base = {{ ldap_global.search_base }}
version = 3
bind = yes
bind_dn = {{ ldap_global.readonly_dn }}
bind_pw = {{ ldap_readonly_pass }}
query_filter = (&(ObjectClass=inetOrgPerson)(ObjectClass=mailAccount)(mailbox=%s))
result_attribute = mailbox
