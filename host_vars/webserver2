# Definition von RSync Backup Jobs 
rsyncbackup:

  storage: 

    # URL des Repos   
    target: "rsync://rsync@10.5.0.100/RSyncBackup/webserver2/"
    
    # zusätzliche RSync Optionen
    options: "--compress"
    
    # Base Directory
    basedir: "/"

    # Includes 
    includes:
      - "etc**"
      - "srv**"
      - "var/log**"

    # Includes 
    excludes:
      - "*"

    # Backup Schedule 
    weekday: "*"
    hour: "*"
    minute: "00"

    # Überwachung aktivieren 
    alert: true

    # Alermlevel für das Backup-Alter in Stunden 
    warning_age: 6  
    critical_age: 12
    
    # Alerta Heartbeat Timeout 
    heartbeat_timeout: "{{ 3 * 12 * 60 * 60 }}"


# Definition von Borgbackup Repositories 
borgbackup_repos:

  borgbase: 

    # URL des Repos   
    repo: "kal1cjbz@kal1cjbz.repo.borgbase.com:repo"
    
    # Repo-spezifische Optionen zum Aufruf von Borgbackup
