
debian_sources: 
  - "deb http://deb.debian.org/debian/ buster main"
  - "deb http://security.debian.org/debian-security buster/updates main"
  - "deb http://download.proxmox.com/debian/pve buster pve-no-subscription"
  - "deb http://packages.icinga.com/debian icinga-buster main"
  - "deb https://download.docker.com/linux/debian buster stable"

debian_keys:
  - "http://download.proxmox.com/debian/proxmox-ve-release-6.x.gpg"
  - "https://packages.icinga.com/icinga.key"
  - "https://download.docker.com/linux/debian/gpg"


# Monitoring aktivieren 
alert:  
  containers: 1
  disks: 
    - "/"
    - "/srv"


# Primäre IP Adressen des Hosts 
int_ip4: 10.5.0.101


# Docker konfigurationen 
docker:
  # Prometheus Metriken aktivieren 
  prometheus_metrics: yes


# Definition von RSync Backup Jobs 
rsyncbackup:

  storage: 

    # URL des Repos   
    target: "rsync://rsync@10.5.0.100/RSyncBackup/master/"
    
    # zusätzliche RSync Optionen
    options: ""
    
    # Base Directory
    basedir: "/"

    # Includes 
    includes:
      - "etc**"
      - "srv**"
      - "var/log**"

    # Includes 
    excludes:
      - "*"

    # Backup Schedule 
    weekday: "*"
    hour: "*"
    minute: "15"


