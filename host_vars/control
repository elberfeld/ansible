# Prim채re IP Adressen des Hosts 
int_ip4: 10.5.0.250


# Definition von RSync Backup Jobs 
rsyncbackup:

  storage: 

    # URL des Repos   
    target: "rsync://rsync@10.5.0.100/RSyncBackup/contol/"
    
    # zus채tzliche RSync Optionen
    options: ""
    
    # Base Directory
    basedir: "/"

    # Includes 
    includes:
      - "etc**"
      - "srv**"
      - "var/log**"

    # Includes 
    excludes:
      - "*"

    # Backup Schedule 
    weekday: "*"
    hour: "*"
    minute: "30"

    # Alerta Heartbeat Timeout 
    heartbeat_timeout: "{{ 3 * 12 * 60 * 60 }}"


# Definition von Borgbackup Repositories 
borgbackup_repos:
  
  backupsrv: 

    # URL des Repos   
    repo: "ssh://private@10.5.0.254:5201/data/private/control"
    
    # Repo-spezifische Optionen zum Aufruf von Borgbackup
    # z.B. bei Sicherungen zu rsync.net ist --remote-path=borg1 erforderlich
    options: ""

    # Compression Options, z,b. "zlib,5, "zstd,5"
    compression: "zlib,5"

    # Prune Optionen 
    prune: "--keep-within=2d --keep-daily=7 --keep-weekly=4 --keep-monthly=6"
    
    # Backup Schedule 
    weekday: "*"
    hour: "*/4"
    minute: "0"

    #  Zus채tzliche Verzeichnisse, die nur in diesem Backup gesichtert werden sollen 
    # directories:

    # Alerta Heartbeat Timeout 
    heartbeat_timeout: "{{ 12 * 60 * 60 }}"

  rsyncnet: 

    # URL des Repos   
    repo: "17953@ch-s011.rsync.net:privat/control"
    
    # Repo-spezifische Optionen zum Aufruf von Borgbackup
    # z.B. bei Sicherungen zu rsync.net ist --remote-path=borg1 erforderlich
    options: "--remote-path=borg1"

    # Compression Options , "zstd,18"
    compression: "zlib,5"

    # Prune Optionen 
    prune: "--keep-within=2d --keep-daily=7 --keep-weekly=4 --keep-monthly=6"
    
    # Backup Schedule 
    weekday: "*"
    hour: "*/4"
    minute: "30"

    #  Zus채tzliche Verzeichnisse, die nur in diesem Backup gesichtert werden sollen 
    # directories:

    # Alerta Heartbeat Timeout 
    heartbeat_timeout: "{{ 12 * 60 * 60 }}"

