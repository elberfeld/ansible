
ansible_ssh_common_args: '-o ProxyCommand="ssh -W %h:%p -q root@webserver1.void.ms"'

debian_sources: 
  - "deb http://ftp.halifax.rwth-aachen.de/debian/ buster main contrib non-free"
  - "deb http://ftp.halifax.rwth-aachen.de/debian/ buster-updates main contrib non-free"
  - "deb http://security.debian.org/ buster/updates main contrib non-free"
  - "deb https://download.docker.com/linux/debian buster stable"

debian_keys:
  - "https://download.docker.com/linux/debian/gpg"




# Primäre IP Adressen des Hosts 
int_ip4: 10.5.0.111

# Hier läuft Docker 
docker_service: yes


# Definition von RSync Backup Jobs 
rsyncbackup:

  storage: 

    # URL des Repos   
    target: "rsync://rsync@10.5.0.100/RSyncBackup/intserver/"
    
    # zusätzliche RSync Optionen
    options: ""
    
    # Base Directory
    basedir: "/"

    # Includes 
    includes:
      - "etc**"
      - "srv**"
      - "var/log**"

    # Includes 
    excludes:
      - "*"

    # Backup Schedule 
    weekday: "*"
    hour: "*"
    minute: "45"

    # Alerta Heartbeat Timeout 
    heartbeat_timeout: "{{ 3 * 12 * 60 * 60 }}"


# Definition von Borgbackup Repositories 
borgbackup_repos:
  
  backupsrv: 

    # URL des Repos   
    repo: "ssh://private@10.5.0.254:5201/data/private/intserver"
    
    # Repo-spezifische Optionen zum Aufruf von Borgbackup
    # z.B. bei Sicherungen zu rsync.net ist --remote-path=borg1 erforderlich
    options: ""

    # Compression Options, z,b. "zlib,5, "zstd,5"
    compression: "zlib,5"

    # Prune Optionen 
    prune: "--keep-within=2d --keep-daily=7 --keep-weekly=4 --keep-monthly=6"
    
    # Backup Schedule 
    weekday: "*"
    hour: "*/4"
    minute: "30"

    #  Zusätzliche Verzeichnisse, die nur in diesem Backup gesichtert werden sollen 
    # directories:

    # Alerta Heartbeat Timeout 
    heartbeat_timeout: "{{ 12 * 60 * 60 }}"

  rsyncnet: 

    # URL des Repos   
    repo: "17953@ch-s011.rsync.net:privat/intserver"
    
    # Repo-spezifische Optionen zum Aufruf von Borgbackup
    # z.B. bei Sicherungen zu rsync.net ist --remote-path=borg1 erforderlich
    options: "--remote-path=borg1"

    # Compression Options , "zstd,18"
    compression: "zlib,5"

    # Prune Optionen 
    prune: "--keep-within=2d --keep-daily=7 --keep-weekly=4 --keep-monthly=6"
    
    # Backup Schedule 
    weekday: "*"
    hour: "*/4"
    minute: "0"

    #  Zusätzliche Verzeichnisse, die nur in diesem Backup gesichtert werden sollen 
    # directories:

    # Alerta Heartbeat Timeout 
    heartbeat_timeout: "{{ 12 * 60 * 60 }}"


# Definition der Verzeichnisse, die in allen Borgbackup Repos gesichert werden sollen 
borgbackup_directories:
  - "/etc/"
  - "/srv/"

